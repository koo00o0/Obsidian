  <script>
    function doAction() {
      if($('.id').val() == "")
      {
        alert("아이디를 입력해주세요");
     
      }else{
        $.ajax({
            dataType : "text",
            type : "post",
            url : "/Membership/IdCheck",
            data : {
            "id" : $('.id').val(),
            },success : function (result)
            {
                if(result =="F")
                {
                    alert("사용중인 아이디입니다");
                }else
                {
                    alert("사용가능한 아이디입니다");
                }
            }, error : function(e)
            {
                alert(e);
            }
        })
      }
    }  
  </script>


    <h2>회원가입</h2>

